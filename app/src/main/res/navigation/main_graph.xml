<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/masterRecipeFragment">

    <fragment
        android:id="@+id/masterRecipeFragment"
        android:name="com.gangofdevelopers.recipes.presentation.view.MasterRecipeFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_masterRecipeFragment_to_detailRecipeFragment"
            app:destination="@id/detailRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailRecipeFragment"
        android:name="com.gangofdevelopers.recipes.presentation.view.DetailRecipeFragment"
        android:label="detail_recipe_fragment"
        tools:layout="@layout/detail_recipe_fragment" />
</navigation>